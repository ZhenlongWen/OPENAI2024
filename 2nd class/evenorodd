    let number = prompt("Enter a number:");
    number = parseInt(number); 

    
    if (isNaN(number)) {
        console.log("That's not a valid number.");
        return;
    }

    if (number % 2 === 0) {
        console.log(`The number ${number} is even.`);
    } else {
        console.log(`The number ${number} is odd.`);
    }
